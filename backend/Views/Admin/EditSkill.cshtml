@model backend.Models.Skills

@{
    ViewBag.Title = "Edit Skill";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-edit"></i> Edit Skill</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.SkillId)

                        <div class="form-group">
                            <label for="SkillName" class="form-label"><i class="fas fa-tools"></i> Skill Name</label>
                            @Html.EditorFor(model => model.SkillName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter skill name" } })
                            @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mt-3">
                            <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Save Changes</button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary"><i class="fas fa-arrow-left"></i> Back</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- Custom Styles -->
<style>
    /* Form Styling */
    .card {
        border-radius: 10px;
       
    }

    /* Dark Mode Support */
    .dark-mode .card {
        background: #222;
        color: white;
    }

    .dark-mode .form-control {
        background: #333;
        color: white;
        border: 1px solid #555;
    }

    .dark-mode .btn-outline-secondary {
        border-color: white;
        color: white;
    }

        .dark-mode .btn-outline-secondary:hover {
            background: white;
            color: #007bff;
        }
</style>

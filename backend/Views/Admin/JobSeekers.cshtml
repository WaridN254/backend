@model IEnumerable<backend.Models.JobSeekerModel>

@{
    ViewBag.Title = "Job Seekers";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5><i class="fas fa-users"></i> Manage Job Seekers</h5>
        </div>
        <div class="card-body">
            <!-- Search Bar -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" id="search" class="form-control" placeholder="Search job seekers...">
                        <button id="searchButton" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
                    </div>
                </div>
            </div>

            <!-- Job Seekers Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-user"></i> First Name</th>
                            <th><i class="fas fa-user"></i> Last Name</th>
                            <th><i class="fas fa-envelope"></i> Email</th>
                            <th><i class="fas fa-venus-mars"></i> Gender</th>
                            <th><i class="fas fa-birthday-cake"></i> Birthdate</th>
                            <th><i class="fas fa-phone"></i> Phone</th>
                            <th><i class="fas fa-briefcase"></i> Experience</th>
                            <th><i class="fas fa-map-marker-alt"></i> City</th>
                            <th><i class="fas fa-map-marked-alt"></i> Address</th>
                            <th><i class="fas fa-map"></i> State</th>
                            <th><i class="fas fa-user-tag"></i> Username</th>
                            <th><i class="fas fa-image"></i> Profile</th>
                            <th><i class="fas fa-cogs"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@item.Birthdate.ToString("yyyy-MM-dd")</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.Experience) Years</td>
                                <td>@Html.DisplayFor(modelItem => item.City)</td>
                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                <td>@Html.DisplayFor(modelItem => item.State)</td>
                                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                <td>
                                    <img src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)"
                                         class="rounded-circle shadow-sm" width="60" height="60" />
                                </td>
                                <td>
                                    <a href="@Url.Action("JobSeekerProfile", "Admin", new { id = item.SeekerId })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-user-circle"></i> View Profile
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

       
    </div>
</div>

<!-- jQuery -->
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchButton").click(function () {
            var searchText = $("#search").val().toLowerCase();
            $("table tbody tr").each(function () {
                var rowText = $(this).text().toLowerCase();
                $(this).toggle(rowText.includes(searchText));
            });
        });
    });
</script>

<!-- Custom Styles -->
<style>
    /* Container */
    .container-fluid {
        max-width: 1200px;
    }

    .card {
        border-radius: 8px;
    }

    /* Table */
    .table {
        border-radius: 8px;
        overflow: hidden;
    }

        .table th, .table td {
            vertical-align: middle;
        }

    /* Circular Profile Images */
    .rounded-circle {
        border: 2px solid #ccc;
        padding: 3px;
    }

    /* Search Bar */
    .input-group {
        border-radius: 8px;
        overflow: hidden;
    }

    /* Dark Mode Support */
    .dark-mode .card {
        background: #222;
        color: white;
    }

    .dark-mode .table-dark {
        background: #444;
    }

    .dark-mode .table td {
        color: white;
    }
</style>

@model IEnumerable<backend.Models.JobViewers>

@{
    ViewBag.Title = "Job Views";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5><i class="fas fa-eye"></i> Job Views</h5>
        </div>
        <div class="card-body">
            <div class="text-center">
                <h5 class="fw-bold">Job ID: <span class="badge bg-secondary">@Model.First().JobId</span></h5>
                <h5>Number of Views: <span class="badge bg-primary">@Model.Count()</span></h5>
            </div>

            <hr>

            <div class="table-responsive">
                <table class="table table-striped table-hover text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-hashtag"></i> View ID</th>
                            <th><i class="fas fa-user"></i> Username</th>
                            <th><i class="fas fa-clock"></i> View Date & Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ViewId</td>
                                <td>
                                    <a href="@Url.Action("JobSeekerProfile", "Admin", new { id = item.SeekerId })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-user-circle"></i> @item.Username
                                    </a>
                                </td>
                                <td>@item.ViewDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Back Button -->
        <div class="card-footer text-end">
            <a href="@Url.Action("Jobs", "Admin")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Jobs
            </a>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .container {
        max-width: 1100px;
    }

    .card {
        border-radius: 8px;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
    }

    .text-center h5 {
        margin-bottom: 10px;
    }

    .fw-bold {
        font-weight: bold;
    }
</style>

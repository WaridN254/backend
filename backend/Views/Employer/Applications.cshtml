        <script>
            $(document).ready(function () {
                // Mark as read & redirect
                $(".job-link").click(function (e) {
                    e.preventDefault();
                    var jobId = $(this).closest(".job-item").data("job-id");
                    var redirectUrl = $(this).attr("href");

                    $.get("/Employer/ApplicationRead/" + jobId)
                        .always(function () {
                            window.location.href = redirectUrl;
                        });
                });

                // Filter Logic
                function filterTable() {
                    var searchValue = $("#searchInput").val().toLowerCase();
                    var statusValue = $("#statusFilter").val().toLowerCase();

                    $(".application-row").each(function () {
                        var name = $(this).data("name");
                        var status = $(this).data("status");

                        var matchesSearch = name.includes(searchValue);
                        var matchesStatus = !statusValue || status === statusValue;

                        $(this).toggle(matchesSearch && matchesStatus);
                    });
                }

                $("#searchInput, #statusFilter").on("input change", filterTable);
            });
        </script>
    }



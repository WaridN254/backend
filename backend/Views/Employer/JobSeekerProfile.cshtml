    <p>.</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <p>.</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <!-- Main Content -->
    <div class="container-fluid mt-4">
        <!-- Your employer dashboard content goes here -->
        <div class="container-fluid mt-4">
            <div class="card">

                <div class="card-body">
                    <!-- Profile Header -->
                    <div class="text-center mb-4">
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.JobSeekerDetails.Image)" class="rounded-circle shadow" width="150" height="150" alt="Profile Picture" />
                        <h4 class="mt-3">@Model.JobSeekerDetails.FirstName @Model.JobSeekerDetails.LastName</h4>
                        <p class="text-muted">@Model.JobSeekerDetails.Username</p>
                        <a href="@Url.Action("SendMessage", "Employer", new { id = Model.JobSeekerDetails.SeekerId })" class="btn btn-outline-primary">
                            <i class="fas fa-paper-plane"></i> Send Message
                        </a>
                    </div>

                    <div class="row">
                        <!-- Personal Info -->
                        <div class="col-md-8">
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-light fw-bold">
                                    <i class="fas fa-id-card"></i> Personal Details
                                </div>
                                <div class="card-body">
                                    <p><strong>Email:</strong> @Model.JobSeekerDetails.Email</p>
                                    <p>
                                        <strong>Gender:</strong>
                                        @if (Model.JobSeekerDetails.Gender == "M")
                                        {<text>Male</text> }
                                    else if (Model.JobSeekerDetails.Gender == "F")
                                    { <text>Female</text> }
                                else
                                { <text>Other</text>}
                                    </p>
                                    <p><strong>Birthdate:</strong> @Model.JobSeekerDetails.Birthdate.ToString("yyyy/MM/dd")</p>
                                    <p><strong>Phone:</strong> @Model.JobSeekerDetails.PhoneNumber</p>
                                    <p><strong>Experience:</strong> @Model.JobSeekerDetails.Experience Years</p>
                                    <p><strong>Address:</strong> @Model.JobSeekerDetails.Address, @Model.JobSeekerDetails.City, @Model.JobSeekerDetails.State</p>
                                </div>
                            </div>

                            <!-- Resume Section -->
                            <div class="card shadow-sm">
                                <div class="card-header bg-light fw-bold">
                                    <i class="fas fa-file-pdf"></i> Resume
                                </div>
                                <div class="card-body text-center">
                                    <a href="#" id="toggleResume" class="btn btn-outline-dark btn-sm mb-2"><i class="fas fa-eye"></i> View Resume</a>
                                    <embed id="resumeEmbed" src="" width="100%" height="500px" style="display:none;" type="application/pdf" />
                                </div>
                            </div>
                        </div>

                        <!-- Skills & Education -->
                        <div class="col-md-4">
                            <!-- Skills -->
                            <div class="card shadow-sm mb-4">
                                <div class="card-header bg-light fw-bold">
                                    <i class="fas fa-tools"></i> Skills
                                </div>
                                <div class="card-body d-flex flex-wrap">
                                    @foreach (var skill in Model.Skills)
                                    {
                                        <span class="badge bg-primary text-white me-1 mb-1">@skill.SkillName</span>
                                    }
                                </div>
                            </div>

                            <!-- Education -->
                            <div class="card shadow-sm">
                                <div class="card-header bg-light fw-bold">
                                    <i class="fas fa-graduation-cap"></i> Education
                                </div>
                                <div class="card-body">
                                    @foreach (var detail in Model.EducationDetails)
                                    {
                                        <div class="mb-3">
                                            <h6 class="mb-1">@detail.University</h6>
                                            <p class="mb-0">@detail.Major - @detail.Degree</p>
                                            <small>GPA: @detail.Gpa | Graduated: @detail.GraduationYear</small>
                                        </div>
                                        <hr />
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <!-- Footer -->
            <footer class="py-4 bg-dark text-white">
                <div class="container">
                    <div class="row">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <h5 class="mb-3">Job Finder</h5>
                            <p>Find your dream job or the perfect candidate with our comprehensive job portal.</p>
                            <div class="social-links">
                                <a href="#" class="text-white me-2"><i class="fab fa-facebook-f"></i></a>
                                <a href="#" class="text-white me-2"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="text-white me-2"><i class="fab fa-linkedin-in"></i></a>
                                <a href="#" class="text-white"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>


                        <div class="col-md-2">
                            <h5 class="mb-3">Contact</h5>
                            <ul class="list-unstyled">
                                <li><i class="fas fa-map-marker-alt me-2"></i>Bukasa Kirinya</li>
                                <li><i class="fas fa-phone me-2"></i> 0701023913</li>
                                <li><i class="fas fa-envelope me-2"></i> info@jobfinder.com</li>
                            </ul>
                        </div>
                    </div>
                    <hr class="my-4">
                    <div class="row">
                        <div class="col-md-6 text-center text-md-start">
                            <p class="mb-0">&copy; <?= date('Y') ?> Job Finder. All rights reserved.</p>
                        </div>
                        <div class="col-md-6 text-center text-md-end">
                            <ul class="list-inline mb-0">
                                <li class="list-inline-item"><a href="terms.php" class="text-white text-decoration-none">Terms of Service</a></li>
                                <li class="list-inline-item"><a href="privacy.php" class="text-white text-decoration-none">Privacy Policy</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                
            </footer>
            <!-- Scripts -->
            <script src="~/Scripts/jquery-3.6.0.min.js"></script>
            <script src="~/Scripts/bootstrap.bundle.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <!-- Custom JS -->
            <script src="~/js/main.js"></script>
            <!-- Chart.js -->
            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <!-- Bootstrap JS Bundle -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

            <!-- Message Modal -->
            <div class="modal fade" id="messageModal" tabindex="-1" aria-labelledby="messageModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="messageModalLabel">Message</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form>
                            <div class="modal-body">
                                <textarea class="form-control" rows="4" placeholder="Type your message..."></textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <script>
        var resumeIsVisible = false;
        document.getElementById("toggleResume").addEventListener("click", function (event) {
            event.preventDefault();
            const embed = document.getElementById("resumeEmbed");
            if (resumeIsVisible) {
                embed.style.display = "none";
                this.textContent = "View Resume";
            } else {
                const pdfData = 'data:application/pdf;base64,@Convert.ToBase64String(Model.JobSeekerDetails.Resume)';
                embed.src = pdfData;
                embed.style.display = "block";
                this.textContent = "Hide Resume";
            }
            resumeIsVisible = !resumeIsVisible;
        });
            </script>
        </div>
    </div>
    </div>
    <script>
        // Toggle Sidebar on small screens
        document.getElementById("toggleSidebar")?.addEventListener("click", function () {
            document.querySelector(".sidebar")?.classList.toggle("active");
        });
    </script>
</body>
</html>

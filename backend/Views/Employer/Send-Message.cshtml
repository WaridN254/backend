    <script>
$("#sendButton").on("click", function () {
    var id = @Model.SeekerId;
    var message = $("#Message").val().trim();

    if (message !== "") {
        $.ajax({
            url: "@Url.Action("SendMessage", "Employer")",
            type: "POST",
            data: { id: id, message: message },
            success: function () {
                // Append message to chat body (basic)
                $("#chatContainer").append(
                    `<div class="d-flex justify-content-end mb-2">
                        <div class="bg-primary text-white p-2 rounded shadow-sm" style="max-width: 70%;">
                            ${message}
                            <div class="text-end small text-light mt-1"><i class="fas fa-check-double"></i> Just now</div>
                        </div>
                    </div>`
                );
                $("#Message").val('');
            },
            error: function (error) {
                alert("Error sending message: " + error.statusText);
            }
        });
    }
});
    </script>

                        <div class="card-body">
                            <form action="@Url.Action("UpdateVacancy", "Employer")" method="post" onsubmit="return validateJobForm();">
                                @Html.Hidden("VacancyID", Model.JobVacancies.JobID)

                                <div class="mb-3">
                                    <label for="JobTitle" class="form-label">Job Title</label>
                                    <input type="text" id="JobTitle" name="JobTitle" class="form-control" placeholder="Enter job title" value="@Model.JobVacancies.JobTitle" onblur="validateJobTitle()" />
                                    <span id="error-JobTitle" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Description</label>
                                    <textarea id="Description" name="Description" class="form-control" rows="4" onblur="validateDescription()">@Model.JobVacancies.Description</textarea>
                                    <span id="error-Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="CategoryID" class="form-label">Category</label>
                                    <select id="CategoryID" name="CategoryID" class="form-control" onblur="validateCategory()">
                                        <option value="">-- Select Category --</option>
                                        @foreach (var cat in Model.Categories)
                                        {
                                            <option value="@cat.CategoryId" @(Model.JobVacancies.CategoryID == cat.CategoryId ? "selected" : "")>@cat.CategoryName</option>
                                        }
                                    </select>
                                    <span id="error-CategoryID" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="Location" class="form-label">Location</label>
                                    <input type="text" id="Location" name="Location" class="form-control" placeholder="e.g., Kampala" value="@Model.JobVacancies.Location" onblur="validateLocation()" />
                                    <span id="error-Location" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="Salary" class="form-label">Salary</label>
                                    <input type="number" id="Salary" name="Salary" class="form-control" value="@Model.JobVacancies.Salary" onblur="validateSalary()" />
                                    <span id="error-Salary" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="EmploymentType" class="form-label">Employment Type</label>
                                    <input type="text" id="EmploymentType" name="EmploymentType" class="form-control" value="@Model.JobVacancies.EmploymentType" placeholder="e.g., Full-time" onblur="validateEmploymentType()" />
                                    <span id="error-EmploymentType" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="ApplicationDeadline" class="form-label">Application Deadline</label>
                                    <input type="date" id="ApplicationDeadline" name="ApplicationDeadline" class="form-control" value="@Model.JobVacancies.ApplicationDeadline.ToString("yyyy-MM-dd")" onblur="validateApplicationDeadline()" />
                                    <span id="error-ApplicationDeadline" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label for="publicationStatus" class="form-label">Publication Status</label>
                                    <select id="publicationStatus" name="IsPublished" class="form-control">
                                        <option value="true" @(Model.JobVacancies.IsPublished ? "selected" : "")>Publish</option>
                                        <option value="false" @(!Model.JobVacancies.IsPublished ? "selected" : "")>Unpublish</option>
                                    </select>
                                </div>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-outline-primary px-5">

@model backend.Models.EmployerModel

@{
    ViewBag.Title = "Employer Register";

}

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            background-color: #007bff;
            padding: 10px 20px;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

            .nav-link:hover {
                color: #f8f9fa !important;
            }

        .btn-login {
            background-color: #28a745;
            color: white !important;
            padding: 8px 15px;
            border-radius: 5px;
            margin-left: 10px;
        }

        .btn-register {
            background-color: #ffc107;
            color: white !important;
            padding: 8px 15px;
            border-radius: 5px;
            margin-left: 10px;
        }

        .hero-section {
            background: url('/assets/images/hero-bg.jpg') no-repeat center center;
            background-size: cover;
            padding: 100px 0;
            color: white;
            position: relative;
        }

            .hero-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                background-color: rgba(0, 123, 255, 0.6);
            }

        .hero-content {
            position: relative;
            z-index: 1;
        }

        .text-highlight {
            color: #ffc107;
        }

        .search-box {
            margin-top: 30px;
        }

        .alert {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="position: fixed; top: 0; width: 100%; z-index: 1000;">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-briefcase me-2"></i>Job Finder
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Jobs", "Home")">Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("JobSeekerRegister", "Home")">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("ContactUs", "Home")">Contact Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <p>.</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <div class="container-fluid mt-5">
        <div class="row ">
            <div class="col-md-4 mt-5">
                <div class="cus-box-reg">


                    <hr />
                    <center><a class="btn btn-primary" href="@Url.Action("JobSeekerRegister","Home")">Register as Job Seeker</a></center>
                </div>
            </div>


            <div class="col-md-8">
                <div class="card p-4 shadow-sm">
                    <h3 class="text-center"><i class="fas fa-user-tie"></i> Employer Registration</h3>

                    <form action="@Url.Action("EmployerRegister","Home")" method="post" enctype="multipart/form-data" onsubmit="return validateEmployerRegisterForm()">
                        @Html.AntiForgeryToken()

                        <!-- Company Details -->
                        <h5 class="mt-3"><i class="fas fa-building"></i> Company Information</h5>
                        <div class="form-group mt-2">
                            <label for="CompanyName"><i class="fas fa-industry"></i> Company Name</label>
                            <input type="text" name="CompanyName" id="companyname" class="form-control" placeholder="Company name" onblur="validateCompanyName(this)">
                            <span id="error-companyname" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="OfficialEmail"><i class="fas fa-envelope"></i> Official Email</label>
                            <input type="email" name="OfficialEmail" id="officialemail" class="form-control" placeholder="Official email" onblur="validateOfficialEmail(this)">
                            <span id="error-officialemail" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="Website"><i class="fas fa-globe"></i> Website</label>
                            <input type="text" name="Website" id="Website" class="form-control" placeholder="Website" onblur="validateWebsite(this)">
                            <span id="error-Website" class="text-danger"></span>
                        </div>

                        <!-- Employer Details -->
                        <h5 class="mt-4"><i class="fas fa-user"></i> Employer Details</h5>
                        <div class="form-group mt-2">
                            <label for="Name"><i class="fas fa-user"></i> Full Name</label>
                            <input type="text" name="Name" id="Name" class="form-control" placeholder="Full name" onblur="validateName(this)">
                            <span id="error-Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="Designation"><i class="fas fa-user-tag"></i> Designation</label>
                            <input type="text" name="Designation" id="Designation" class="form-control" placeholder="Designation" onblur="validateDesignation(this)">
                            <span id="error-Designation" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="Email"><i class="fas fa-envelope"></i> Email</label>
                            <input type="email" name="Email" id="Email" class="form-control" placeholder="Email" onblur="validateEmail(this)">
                            <span id="error-email" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="ContactPhone"><i class="fas fa-phone"></i> Contact Number</label>
                            <input type="text" name="ContactPhone" id="ContactPhone" class="form-control" placeholder="Phone number" onblur="validatePhone(this)">
                            <span id="error-phone" class="text-danger"></span>
                        </div>

                        <!-- Account Details -->
                        <h5 class="mt-4"><i class="fas fa-user-lock"></i> Account Details</h5>
                        <div class="form-group mt-2">
                            <label for="username"><i class="fas fa-user"></i> Username</label>
                            <input type="text" name="Username" id="username" class="form-control" placeholder="Username" oninput="validateUsername(this.value)">
                            <span id="error-username" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="Password"><i class="fas fa-lock"></i> Password</label>
                            <input type="password" name="Password" id="Password" class="form-control" placeholder="Password" onkeyup="validateCpass(this)" onfocusout="validatePass(this)">
                            <span id="error-password" class="text-danger"></span>
                        </div>

                        <div class="form-group mt-2">
                            <label for="ConfirmPassword"><i class="fas fa-lock"></i> Confirm Password</label>
                            <input type="password" name="cpassword" id="ConfirmPassword" class="form-control" placeholder="Confirm password" onfocusout="validateCpass(this)">
                            <span id="error-cpassword" class="text-danger"></span>
                        </div>

                        <!-- Company Logo Upload -->
                        <div class="form-group mt-2">
                            <label for="logoUpload"><i class="fas fa-image"></i> Company Logo</label>
                            <input type="file" name="logoUpload" id="logoUpload" class="form-control" accept=".png, .jpg" onchange="validateLogoUpload(this)">
                            <span id="error-logoUpload" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus"></i> Register
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/MyScripts/main.js"></script>

    <!-- Custom Styles -->
    <style>
        .card {
            border-radius: 10px;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            padding: 10px;
            font-size: 16px;
        }

        .text-danger {
            font-size: 14px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</body>
</html>
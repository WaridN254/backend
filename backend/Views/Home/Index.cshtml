    <script>
        const carousel = document.getElementById('howItWorksCarousel');
        carousel.addEventListener('slid.bs.carousel', () => {
            // Restart animation by removing and re-adding the class
            const activeIcon = carousel.querySelector('.carousel-item.active .rotate-on-view');
            if (activeIcon) {
                activeIcon.style.animation = 'none';
                activeIcon.offsetHeight; // trigger reflow
                activeIcon.style.animation = null;
            }
        });
    </script>

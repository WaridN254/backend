    <!-- Filter Script -->
    <script>
        $(document).ready(function () {
            $('.category-filter').on('change', function () {
                var selectedCategories = $('.category-filter:checked').map(function () {
                    return $(this).val();
                }).get();

                $('.job-card').each(function () {
                    var jobCategoryId = $(this).data('category-id').toString();
                    if (selectedCategories.length === 0 || selectedCategories.includes(jobCategoryId)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>


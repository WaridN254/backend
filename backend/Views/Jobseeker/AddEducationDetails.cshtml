@{
    ViewBag.Title = "AddEducationDetails";

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap & Custom CSS -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Main Wrapper */
        #wrapper {
            display: flex;
        }

        /* Sidebar Styling */
        #sidebar {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: rgba(52, 58, 64, 0.9);
            backdrop-filter: blur(10px);
            color: white;
            padding-top: 20px;
            transition: 0.3s;
            z-index: 1000;
        }

            #sidebar .sidebar-header {
                text-align: center;
                padding: 15px;
                font-size: 18px;
                font-weight: bold;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

        .nav-link {
            color: white !important;
            padding: 12px 15px;
            display: flex;
            align-items: center;
            transition: 0.3s;
            border-radius: 8px;
        }

            .nav-link i {
                margin-right: 10px;
                font-size: 18px;
            }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        /* Page Content */
        #content {
            margin-left: 250px;
            width: 100%;
            padding: 20px;
            transition: 0.3s;
        }

        /* Navbar Styling */
        .top-navbar {
            background: #343a40;
            padding: 12px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            font-size: 22px;
            cursor: pointer;
        }

        /* Sidebar Toggle */
        .collapsed #sidebar {
            width: 70px;
        }

        .collapsed #content {
            margin-left: 80px;
        }

        .collapsed .nav-link span {
            display: none;
        }

        .collapsed .sidebar-header {
            display: none;
        }

        /* Dark Mode Styling */
        .dark-mode {
            background-color: #181818;
            color: white;
        }

            .dark-mode .card {
                background-color: #222;
                border: 1px solid #444;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="wrapper">
        <div id="sidebar">
            <div class="sidebar-header">
                <h4><i class="fas fa-user-tie"></i> Job Seeker</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "JobSeeker")" class="nav-link"><i class="fas fa-home"></i> <span>Dashboard</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Jobs", "JobSeeker")" class="nav-link"><i class="fas fa-briefcase"></i> <span>Jobs</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("AppliedJobs", "JobSeeker")" class="nav-link"><i class="fas fa-file-alt"></i> <span>Applied Jobs</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("ChatList", "JobSeeker")" class="nav-link"><i class="fas fa-comments"></i> <span>Messages</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("JobSeekerProfile", "JobSeeker")" class="nav-link"><i class="fas fa-user"></i> <span>Profile</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Bookmarks", "JobSeeker")" class="nav-link"><i class="fas fa-bookmark"></i> <span>Saved Jobs</span></a>
                </li>
                @*<li class="nav-item">
            <a href="@Url.Action("Logout", "JobSeeker")" class="nav-link text-danger"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
        </li>*@
                <li>
                    <a class="dropdown-item" name="logoutBtn" id="Logoutbtn"><i class="fas fa-sign-out-alt me-2"></i>Logout</a>
                </li>
            </ul>
        </div>
        <p>.</p>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <script>
            document.getElementById("Logoutbtn").addEventListener("click", function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You will be logged out from your account.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, Logout',
                    cancelButtonText: 'Cancel',
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33'
                }).then((result) => {
                    if (result.isConfirmed) {
                        fetch('/JobSeeker/Logout', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                                // Include CSRF token here if needed
                                // 'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            }
                        })
                            .then(response => {
                                if (response.ok) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Logged Out',
                                        text: 'You have been logged out successfully.',
                                        showConfirmButton: false,
                                        timer: 1500
                                    });

                                    setTimeout(() => window.location.href = '/', 2000);
                                } else {
                                    throw new Error('Logout failed');
                                }
                            })
                            .catch(error => {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Oops...',
                                    text: 'Something went wrong while logging out!',
                                });
                            });
                    }
                });
            });
        </script>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <button class="toggle-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
                <button onclick="toggleDarkMode()" class="btn btn-sm btn-outline-light"><i class="fas fa-moon"></i> Dark Mode</button>
            </div>


        </div>
    </div>

    <!-- Bootstrap & jQuery -->


    <script>
        function toggleSidebar() {
            document.body.classList.toggle("collapsed");
        }

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }
    </script>
    <div class="d-flex justify-content-center mt-5">
        <div class="col-md-6">
            <form action="@Url.Action("AddEducationDetails", "JobSeeker")" method="post">
                <div class="card p-3" style="border: none;" id="educationContainer">
                    <h3>Add Education Details</h3>

                    <div class="form-group mt-2">
                        <label>University:</label>
                        <input type="text" name="University" class="form-control" />
                    </div>

                    <div class="form-group mt-2">
                        <label for="major">Major:</label>
                        <select id="major" name="Major" class="form-control">
                            <option value="">Please select</option>
                            <option value="Computer Application">Computer Application</option>
                            <option value="Computer Science">Computer Science</option>
                            <option value="Computer Engineering">Computer Engineering</option>
                        </select>
                    </div>

                    <div class="form-group mt-2">
                        <label for="degree">Degree:</label>
                        <select id="degree" name="Degree" class="form-control">
                            <option value="">Please select</option>
                            <option value="Master">Master</option>
                            <option value="Graduation">Graduation</option>
                            <option value="Ph.D.">Ph.D.</option>
                        </select>
                    </div>

                    <div class="form-group mt-2">
                        <label for="graduationYear">Graduation Year:</label>
                        <input type="date" id="graduationYear" name="GraduationYear" class="form-control" />
                    </div>

                    <div class="form-group mt-2">
                        <label for="gpa">GPA:</label>
                        <input type="number" step="0.01" id="gpa" name="Gpa" class="form-control" placeholder="GPA" />
                    </div>

                    <input type="submit" value="Submit" class="btn btn-primary mt-3">
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <script src="~/Scripts/jquery-3.7.1.min.js"></script>
        <script src="~/Scripts/MyScripts/select2.min.js"></script>
        <script src="~/Scripts/MyScripts/main.js"></script>
    }

    </body>
</html>
    <script>
    $(document).ready(function () {
        $(".remove-bookmark").click(function () {
            var jobId = $(this).data("jobid");

            $.ajax({
                url: "@Url.Action("RemoveBookmark", "JobSeeker")",
                type: "POST",
                data: { id: jobId },
                success: function () {
                    location.reload();
                },
                error: function (error) {
                    console.error("Error removing bookmark: " + error.statusText);
                }
            });
        });
    });
    </script>


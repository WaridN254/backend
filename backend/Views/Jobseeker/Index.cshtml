    ViewBag.Title = "Job Dashboard";





    @functions {
        string GetStatusClass(string status)
        {
            switch (status)
            {
                case "Pending":
                    return "badge bg-warning text-dark";
                case "Read":
                    return "badge bg-primary";
                case "Approved":
                    return "badge bg-success";
                case "Rejected":
                    return "badge bg-danger";
                default:
                    return "badge bg-secondary";
            }
        }
    }
}



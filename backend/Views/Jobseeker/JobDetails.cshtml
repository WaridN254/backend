@model backend.Models.JobDetails

@{
    ViewBag.Title = "Job Details";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Job Finder</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="../assets/css/style.css">
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="position: fixed; top: 0; width: 100%; z-index: 1000;">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "JobSeeker")">
                <i class="fas fa-briefcase me-2"></i>Job Finder
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("jobs", "JobSeeker")">Browse Jobs</a>
                    </li>

                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="notificationsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>

                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationsDropdown">
                            <li><h6 class="dropdown-header">Notifications</h6></li>

                            <li><span class="dropdown-item text-muted">No notifications</span></li>

                            <li>
                                <a class="dropdown-item" href="">
                                    <small class="text-muted"></small>

                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-center" href="/">View All</a></li>

                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-user-circle me-1"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">

                            <li><a class="dropdown-item" href="@Url.Action("JobSeekerProfile", "JobSeeker")"><i class="fas fa-user me-2"></i>My Profile</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("ChatList", "JobSeeker")"><i class="fas fa-comments text-success"></i>Chats</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("AppliedJobs", "JobSeeker")"><i class="fas fa-file-alt me-2"></i>My Applications</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Bookmarks", "JobSeeker")"><i class="fas fa-bookmark me-2"></i>Bookmarked Jobs</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="@Url.Action("ChangePassword", "JobSeeker")"><i class="fas fa-cog me-2"></i>Account Settings</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("Logout", "JobSeeker")"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <div class="container mt-5">
        <div class="row">
            <!-- Job Details -->
            <div class="col-md-9">
                <div class="card shadow-sm p-4">
                    <h2 class="mb-3"><i class="fas fa-briefcase"></i> @Model.JobTitle</h2>

                    <!-- Bookmark Button -->
                    @*<button id="Save" class="btn btn-outline-secondary">
                            @if (ViewBag.isSaved)
                            {
                                <i class="fas fa-bookmark"></i> Saved;
                                    }
                            else
                            {
                                <i class="far fa-bookmark"></i>Save Job;
                                    }
                        </button>*@

                    <!-- Job Stats -->
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <i class="fas fa-eye"></i> <strong>Views:</strong> @Model.NumberOfViews
                        </div>
                        <div class="col-md-4">
                            <i class="fas fa-users"></i> <strong>Applicants:</strong> @Model.NumberOfApplications
                        </div>
                    </div>

                    <hr>

                    <!-- Job Description -->
                    <h5 class="mt-3"><i class="fas fa-align-left"></i> Job Description</h5>
                    <p class="text-justify">@Html.Raw(@Model.Description.Replace(Environment.NewLine, "<br />"))</p>

                    <hr>

                    <!-- Job Information -->
                    <h5 class="mt-3"><i class="fas fa-info-circle"></i> Job Details</h5>
                    <dl class="row">
                        <dt class="col-sm-4"><i class="fas fa-tags"></i> Category:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

                        <dt class="col-sm-4"><i class="fas fa-map-marker-alt"></i> Location:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>

                        <dt class="col-sm-4"><i class="fas fa-money-bill-wave"></i> Salary:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Salary)</dd>

                        <dt class="col-sm-4"><i class="fas fa-briefcase"></i> Employment Type:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EmploymentType)</dd>

                        <dt class="col-sm-4"><i class="fas fa-calendar"></i> Application Deadline:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ApplicationDeadline)</dd>
                    </dl>

                    <!-- Apply Button -->
                    <div class="mt-3">
                        @if (ViewBag.isApplied)
                        {
                            <button class="btn btn-success" disabled><i class="fas fa-check"></i> Applied</button>
                        }
                        else
                        {
                            @*<a href="@Url.Action("ApplyJob", "JobSeeker", new { id = Model.JobID })" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> Apply Now
                                </a>*@
                            <a href="@Url.Action("ApplyJob", "JobSeeker", new { id = Model.JobID })" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Apply Now
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Employer Details -->
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <img src="data:image/png;base64,@Convert.ToBase64String(Model.CompanyLogo)" class="rounded-circle mb-2" width="80">
                        <h4 class="mt-2"><i class="fas fa-building"></i> @Html.DisplayFor(model => model.CompanyName)</h4>
                        <a href="@Url.Action("SendMessage", "JobSeeker", new { id = Model.EmployerID })" class="btn btn-outline-primary btn-sm mt-2">
                            <i class="fas fa-comment-dots"></i> Send Message
                        </a>
                    </div>
                </div>

                <div class="card shadow-sm mt-3">
                    <div class="card-body">
                        <h5 class="mb-3"><i class="fas fa-user-tie"></i> Employer Details</h5>
                        <dl>
                            <dt>Official Email:</dt>
                            <dd>@Html.DisplayFor(model => model.OfficialEmail)</dd>

                            <dt>Website:</dt>
                            <dd>@Html.DisplayFor(model => model.Website)</dd>

                            <dt>Employer:</dt>
                            <dd>@Html.DisplayFor(model => model.EmployerName), @Html.DisplayFor(model => model.Designation)</dd>

                            <dt>Contact Email:</dt>
                            <dd>@Html.DisplayFor(model => model.Email)</dd>

                            <dt>Phone Number:</dt>
                            <dd>@Html.DisplayFor(model => model.ContactPhone)</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script>
    $(document).ready(function () {
        var jobId = @Model.JobID;
        var url = "/JobSeeker/ViewJob/" + jobId;

        // Increase view count
        $.ajax({
            url: url,
            type: 'GET',
            success: function () {
                console.log('View counted.');
            }
        });

        // Save Job Button
        $("#Save").click(function () {
            var url = "/JobSeeker/Bookmark/" + jobId;
            $.ajax({
                url: url,
                type: 'GET',
                success: function () {
                    console.log('Job saved.');
                }
            });

            window.location.reload();
        });
    });
    </script>

    <!-- Custom Styles -->

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="../assets/js/main.js"></script>
    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/js/main.js"></script>
</body>
</html>
    <script>
    $(document).ready(function () {
        var messageBody = document.querySelector('#messageBody');

        // Auto-scroll to the bottom of chat
        function scrollToBottom() {
            messageBody.scrollTop = messageBody.scrollHeight - messageBody.clientHeight;
        }

        scrollToBottom();

        $("#sendButton").on("click", function () {
            var id = @Model.EmployerID;
            var message = $("#Message").val();
            if (message !== "") {
                sendMessageToController(id, message);
            }
        });

        function sendMessageToController(id, message) {
            var data = {
                id: id,
                message: message
            };

            $.ajax({
                url: "@Url.Action("SendMessage","JobSeeker")",
                type: "POST",
                data: data,
                success: function () {
                    console.log("Message sent successfully.");
                    window.location.reload();
                },
                error: function (error) {
                    console.error("Error sending message: " + error.statusText);
                }
            });
        }

        // Camera Feature
        let cameraStream = null;

        $("#openCamera").on("click", function () {
            $("#cameraModal").modal("show");

            navigator.mediaDevices.getUserMedia({ video: true })
                .then(function (stream) {
                    cameraStream = stream;
                    document.getElementById("cameraView").srcObject = stream;
                })
                .catch(function (error) {
                    console.error("Error accessing camera: ", error);
                });
        });

        $("#capturePhoto").on("click", function () {
            const video = document.getElementById("cameraView");
            const canvas = document.getElementById("cameraCanvas");
            const context = canvas.getContext("2d");

            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0, canvas.width, canvas.height);

            const imageData = canvas.toDataURL("image/png");

            // Stop camera stream
            if (cameraStream) {
                cameraStream.getTracks().forEach(track => track.stop());
            }

            $("#cameraModal").modal("hide");

            // Send the image to the chat
            sendFileToController(imageData);
        });

        // File Upload Feature
        $("#openFile").on("click", function () {
            $("#fileInput").click();
        });

        $("#fileInput").on("change", function (event) {
            var file = event.target.files[0];

            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    sendFileToController(e.target.result);
                };
                reader.readAsDataURL(file);
            }
        });

        function sendFileToController(fileData) {
            var id = @Model.EmployerID;

            $.ajax({
                url: "@Url.Action("SendFile","JobSeeker")",
                type: "POST",
                data: { id: id, fileData: fileData },
                success: function () {
                    console.log("File sent successfully.");
                    window.location.reload();
                },
                error: function (error) {
                    console.error("Error sending file: " + error.statusText);
                }
            });
        }
    });
    </script>


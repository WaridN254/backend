@model backend.Models.EducationDetails
@{
    ViewBag.Title = "UpdateEductionDetails";

}
<link href="~/Content/select2.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap & Custom CSS -->

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        /* Main Wrapper */
        #wrapper {
            display: flex;
        }

        /* Sidebar Styling */
        #sidebar {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: rgba(52, 58, 64, 0.9);
            backdrop-filter: blur(10px);
            color: white;
            padding-top: 20px;
            transition: 0.3s;
            z-index: 1000;
        }

            #sidebar .sidebar-header {
                text-align: center;
                padding: 15px;
                font-size: 18px;
                font-weight: bold;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }

        .nav-link {
            color: white !important;
            padding: 12px 15px;
            display: flex;
            align-items: center;
            transition: 0.3s;
            border-radius: 8px;
        }

            .nav-link i {
                margin-right: 10px;
                font-size: 18px;
            }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        /* Page Content */
        #content {
            margin-left: 250px;
            width: 100%;
            padding: 20px;
            transition: 0.3s;
        }

        /* Navbar Styling */
        .top-navbar {
            background: #343a40;
            padding: 12px 20px;
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            font-size: 22px;
            cursor: pointer;
        }

        /* Sidebar Toggle */
        .collapsed #sidebar {
            width: 70px;
        }

        .collapsed #content {
            margin-left: 80px;
        }

        .collapsed .nav-link span {
            display: none;
        }

        .collapsed .sidebar-header {
            display: none;
        }

        /* Dark Mode Styling */
        .dark-mode {
            background-color: #181818;
            color: white;
        }

            .dark-mode .card {
                background-color: #222;
                border: 1px solid #444;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="wrapper">
        <div id="sidebar">
            <div class="sidebar-header">
                <h4><i class="fas fa-user-tie"></i> Job Seeker</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="@Url.Action("Index", "JobSeeker")" class="nav-link"><i class="fas fa-home"></i> <span>Dashboard</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Jobs", "JobSeeker")" class="nav-link"><i class="fas fa-briefcase"></i> <span>Jobs</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("AppliedJobs", "JobSeeker")" class="nav-link"><i class="fas fa-file-alt"></i> <span>Applied Jobs</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("ChatList", "JobSeeker")" class="nav-link"><i class="fas fa-comments"></i> <span>Messages</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("JobSeekerProfile", "JobSeeker")" class="nav-link"><i class="fas fa-user"></i> <span>Profile</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Bookmarks", "JobSeeker")" class="nav-link"><i class="fas fa-bookmark"></i> <span>Saved Jobs</span></a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("Logout", "JobSeeker")" class="nav-link text-danger"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <div class="top-navbar">
                <button class="toggle-btn" onclick="toggleSidebar()"><i class="fas fa-bars"></i></button>
                <button onclick="toggleDarkMode()" class="btn btn-sm btn-outline-light"><i class="fas fa-moon"></i> Dark Mode</button>
            </div>


        </div>
    </div>

    <!-- Bootstrap & jQuery -->


    <script>
        function toggleSidebar() {
            document.body.classList.toggle("collapsed");
        }

        function toggleDarkMode() {
            document.body.classList.toggle("dark-mode");
        }
    </script>
    <div class="d-flex justify-content-center mt-5 ">
        <div class="col-md-6">
            <form action=@Url.Action("UpdateEducationDetails","JobSeeker") method="post" onsubmit="return ValidateEducationForm()">
                <div class="card p-3" style="border: none;transform: translateY(0);" id="educationContainer">
                    <h3>Update eduction details</h3>
                    <input type="hidden" name="EducationId" value="@Model.EducationId" />
                    <div class="form-group  mt-2 ">
                        <label for="universityList" class="text-left">University:</label>
                        <select id="universityList" name="University" class="form-control" onblur="validateUniversity(this)"></select>
                        <span id="error-universityList" class="text-danger"></span>
                    </div>
                    <div class="form-group  mt-2 ">
                        <label for="major">Major:</label>
                        <select id="major" name="Major" class="form-control " onblur="validateMajor(this)">
                            <option value="">Please select</option>
                            <option value="Computer Application" @if (Model.Major == "Computer Application") { <text> selected</text> }>Computer Application</option>
                            <option value="Computer Science" @if (Model.Major == "Computer Science") { <text> selected</text>}>Computer Science</option>
                            <option value="Computer Engineering" @if (Model.Major == "Computer Engineering") { <text> selected</text>}>Computer Engineering</option>
                        </select>

                        <span id="error-major" class="text-danger"></span>
                    </div>
                    <div class="form-group  mt-2 ">
                        <label for="degree">Degree:</label>
                        <select id="degree" name="Degree" class="form-control " onblur="validateDegree(this)">
                            <option value="">Please select</option>
                            <option value="Master" @if (Model.Degree == "Master") { <text> selected</text> }>Master</option>
                            <option value="Graduation" @if (Model.Degree == "Graduation") { <text> selected</text> }>Graduation</option>
                            <option value="Ph.D." @if (Model.Degree == "Ph.D.") { <text> selected</text> }>Ph.D.</option>
                        </select>
                        <span id="error-degree" class="text-danger"></span>
                    </div>
                    <div class="form-group  mt-2 ">
                        <label for="graduationYear">Graduation year:</label>
                        <select id="graduationYear" name="GraduationYear" class="form-control" onblur="validateGraduationYear(this)">
                        </select>

                        <span id="error-graduationYear" class="text-danger"></span>
                    </div>
                    <label for="gpa">GPA:</label>
                    <input type="number" step="0.01" id="gpa" name="Gpa" placeholder="GPA" class="form-control" value="@Model.Gpa" onblur="validateGPA(this)">
                    <span id="error-gpa" class="text-danger"></span>
                    <input type="submit" value="Submit" class="btn btn-primary mt-2">
                </div>
            </form>
        </div>
    </div>

 
    }  
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/MyScripts/select2.min.js"></script>
    <script src="~/Scripts/MyScripts/main.js"></script>
    <script>
    $(document).ready(function () {
        populateYearDropdown();
        $("#graduationYear").val(@Model.GraduationYear);
    var selectedUniversity = "@Model.University"
    var universityList = $("#universityList");
    $("#universityList").select2({
        placeholder: "Select university",
        allowClear: true,
        width: '100%'
    });

    $.getJSON('/Scripts/data.json', function (data) {
        data.forEach(function (university) {
            $("#universityList").append(`<option value="${university.name}">${university.name}</option>`);
        });
        universityList.val(selectedUniversity).trigger('change');
    })
        .fail(function (error) {
            console.error('Error loading local JSON file:', error);
        });

});
    </script>

    </body>
</html>
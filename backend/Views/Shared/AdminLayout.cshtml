<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Custom Styles -->
    <style>
        /* Sidebar */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #343a40;
            color: white;
            transition: all 0.3s ease-in-out;
            overflow-y: auto;
        }

        .sidebar.collapsed {
            width: 80px;
        }

        .sidebar .nav-link {
            color: white;
            padding: 12px;
            display: flex;
            align-items: center;
            text-decoration: none;
        }

        .sidebar .nav-link:hover {
            background: #007bff;
        }

        .sidebar .nav-link i {
            margin-right: 10px;
        }

        .sidebar.collapsed .nav-link {
            text-align: center;
            font-size: 0;
        }

        .sidebar.collapsed .nav-link i {
            font-size: 20px;
            margin-right: 0;
        }

        /* Main Content */
        #content {
            margin-left: 250px;
            transition: all 0.3s ease-in-out;
            padding: 20px;
            width: calc(100% - 250px);
        }

        .sidebar.collapsed + #content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }

        /* Navbar */
        .navbar {
            background: #f8f9fa;
            border-bottom: 1px solid #ddd;
            padding: 10px;
        }

        .navbar .btn {
            border: none;
        }

        /* Sidebar Toggle Button */
        #sidebarToggle {
            color: white;
            font-size: 20px;
            cursor: pointer;
        }

        /* Responsive */
         @*@media screen and (max-width: 768px) {
        .sidebar {
            width: 80px;
        }

        #content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }
    }*@
 @Html.Raw(@"<style>
    /* Responsive */
    @media screen and (max-width: 768px) {
        .sidebar {
            width: 80px;
        }

        #content {
            margin-left: 80px;
            width: calc(100% - 80px);
        }
    }
</style>")


    </style>
</head>
<body>

    <!-- Wrapper -->
    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white">
            <div class="text-center py-3">
                <h4><i class="fas fa-user-shield"></i> Admin</h4>
            </div>
            <ul class="nav flex-column">
                <li class="nav-item"><a href="/Admin" class="nav-link"><i class="fas fa-home"></i> Dashboard</a></li>
                <li class="nav-item"><a href="@Url.Action("Jobs","Admin")" class="nav-link"><i class="fas fa-briefcase"></i> Jobs</a></li>
                <li class="nav-item"><a href="@Url.Action("Employers","Admin")" class="nav-link"><i class="fas fa-users"></i> Employers</a></li>
                <li class="nav-item"><a href="@Url.Action("JobSeekers","Admin")" class="nav-link"><i class="fas fa-user"></i> Job Seekers</a></li>
              
            </ul>
        </div>

        <!-- Page Content -->
        <div id="content">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light">
                <button class="btn btn-dark me-3" id="sidebarToggle"><i class="fas fa-bars"></i></button>
                <div class="ms-auto d-flex align-items-center">
                    <div class="dropdown me-3">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-bell"></i> <span class="badge bg-danger">3</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">New job application received</a></li>
                            <li><a class="dropdown-item" href="#">New employer registered</a></li>
                            <li><a class="dropdown-item" href="#">System update available</a></li>
                        </ul>
                    </div>

                    <!-- Profile Dropdown -->
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <img src="~/Content/Static/360_FF.jpg" class="rounded-circle" height="35px"> Admin
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="@Url.Action("ChangePassword","Admin")"><i class="fas fa-key"></i> Change Password</a></li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout","Admin")"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- Sidebar Toggle -->
    <script>
        $("#sidebarToggle").on("click", function () {
            $(".sidebar").toggleClass("collapsed");
            $("#content").toggleClass("collapsed");
        });
    </script>

</body>
</html>
